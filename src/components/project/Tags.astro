---
import Icon from "astro-icon";
export interface Props {
	tags?: string[];
}

const { tags } = Astro.props;
---

{
	tags && (
		<div class="flex flex-row flex-wrap w-full mt-2">
			{tags.map((tag) => (
				
				<span class="text-secondtext font-heading lg:py-1 flex flex-row p-1 text-xs rounded"><Icon name="twemoji:eight-pointed-star" width="10" height="10" class="text-accent2 pt-1" />{tag}</span>
			))}
		</div>
	)
}

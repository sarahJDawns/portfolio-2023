---
import Icon from "astro-icon";

const socials = [
  {
    account: "Email",
    path: "mailto:sarah.j.dawns+work@gmail.com?Subject=Hello%20from%20Sarah%27s%20site",
  },
  {
    account: "Github",
    path: "https://github.com/sarahJDawns",
  },
  {
    account: "X",
    path: "https://x.com/sjdawns",
  },];
---
<div class="flex p-6">
      <ul class="flex-column gap-10">
        
        {
          socials.map((item) => (
            <li class="flex flex-row">
              <Icon
        name="ph:spiral-bold"
        width="15"
        height="15"
        class="text-accent2 mt-5 mr-3"
      />
              <a
                aria-label="navigation link"
                href={item.path}
                target="_blank"
                class="font-body text-text hover:text-accent2 flex py-3 text-lg font-bold uppercase"
              >
                {item.account}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
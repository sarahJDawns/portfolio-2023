---
import Social from '../components/ui/Social.astro';
import { Image } from "astro:assets";
import project from "../assets/images/projects.png";
---

<section
	id="contact"
	class="bg-background pt-20 pb-10 flex flex-col md:flex-row border-b-2 border-y-accent"
>
<div class="flex flex-col w-1/3">
	<div>
    <h2
      class="mb-5 font-heading text-3xl text-text border-b-2 border-y-accent2 inline-block"
    >
      Contact
    </h2>
  </div>
	<Social />
</div>
<div class="flex flex-row w-full md:w-2/3 md:ml-auto x-auto">
    <Image
      src={project}
      alt="Projects"
      format="avif"
      width={600}
      height={600}
      loading="eager"
    />
	</div>
		
</section>
